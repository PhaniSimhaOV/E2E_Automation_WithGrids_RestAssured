pipeline {
    agent any
tools{
maven 'MAVEN'
}
    environment {
        GIT_REPO_URL = 'https://github.com/LazySaif20/E2E_Automation_WithGrids_RestAssured.git'  // Replace with your Git repository URL
        GIT_BRANCH = 'OEM_Anjali.M'  // Branch to checkout from
        REPORTS_DIR = 'cucumber-reports'  // Folder for storing Cucumber reports

    }
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    // Checkout the latest code from the Git repository
                    git branch: "${env.GIT_BRANCH}", url: "${env.GIT_REPO_URL}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies using Maven
                    sh 'mvn clean install'  // Run Maven build to install dependencies
                }
            }
        }

        stage('Run Automation Scripts (Cucumber Tests)') {
            steps {
                script {
                    // Run the Cucumber tests using Maven, store results in a JSON file
                    // Ensure the correct setup for Chrome and WebDriver in your test environment
                    sh "mvn test -Dcucumber.options='--plugin json:${env.REPORTS_DIR}/cucumber.json'"
                }
            }
        }

        stage('Archive Cucumber Reports') {
            steps {
                script {
                    // Archive the generated Cucumber JSON reports
                    archiveArtifacts artifacts: "${env.REPORTS_DIR}/**/*", allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            // Always run this block, whether success or failure
            junit "${env.REPORTS_DIR}/cucumber.json"  // Process the Cucumber JSON reports using the JUnit plugin
        }
    }
}
