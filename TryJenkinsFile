pipeline {
    agent any
    tools {
        maven 'MAVEN'       // Use the name configured in Jenkins
        jdk 'JAVA_JDK'      // Use the name configured in Jenkins
    }
    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/LazySaif20/E2E_Automation_WithGrids_RestAssured.git', branch: 'OEM_Anjali.M'
            }
        }
        stage('Run Automation Scripts (Cucumber Tests)') {
            steps {
                bat 'mvn clean test'
            }
        }
        stage('Generate Cucumber Report') {
            steps {
                bat 'mvn net.masterthought:cucumber-reporting:generate'
            }
        }
        stage('Archive Test Results') {
            steps {
                // Archive JUnit test results
                junit '**/target/surefire-reports/*.xml'

                // Archive Cucumber JSON report for debugging
                archiveArtifacts artifacts: 'target/cucumber-reports/Cucumber.json'

                // Create a dedicated folder for the Cucumber reports
                script {
                    def reportDir = "CucumberReports"
                    bat "mkdir ${reportDir}"
                    bat "copy target\\cucumber-reports\\* ${reportDir}"
                }
            }
        }
    }
    post {
        always {
            // Publish Cucumber reports
            cucumber fileIncludePattern: 'target/cucumber-reports/Cucumber.json'

            // Clean workspace after the build
            cleanWs()
        }
    }
}
