pipeline {
    agent any
    tools {
        maven 'MAVEN'
        jdk 'JAVA_JDK'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/LazySaif20/E2E_Automation_WithGrids_RestAssured.git', branch: 'OEM_Anjali.M'
            }
        }
        stage('Run Automation Scripts (Cucumber Tests)') {
            steps {
                bat 'mvn clean test'
            }
        }
        stage('Generate Cucumber Report') {
            steps {
                bat 'mvn net.masterthought:cucumber-reporting:generate'
            }
        }
        stage('Archive Test Results') {
            steps {
                junit '**/target/surefire-reports/*.xml'
                archiveArtifacts artifacts: 'target/cucumber-reports/*.json', fingerprint: true
            }
        }
    }
    post {
        always {
            script {
                echo 'Build completed. Cleaning up workspace.'
            }
            cleanWs()
        }
    }
}
